<p id="notice"><%= notice %></p>

<h3>Brands</h3>

<div class="m-4 clearfix">
  <span class="float-left">
    <%= link_to 'New Brand', new_brand_path, class: 'btn btn-link btn-light' %>
    <%= link_to 'All Ads', ads_path, class: 'btn btn-link btn-light' %>
    <%= link_to 'All Countries', countries_path, class: 'btn btn-link btn-light' %>
  </span>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Brand</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= link_to brand.name, brand %></td>
        <td>
          <%= link_to 'Edit', edit_brand_path(brand) %>
          <%= link_to 'Delete', brand, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

