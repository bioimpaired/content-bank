<%= form_with(model: ad, local: true) do |form| %>
  <% if ad.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ad.errors.count, "error") %> prohibited this ad from being saved:</h2>

      <ul>
      <% ad.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-sizing">
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :brand_id %>
      <%= collection_select(:ad, :brand_id, Brand.all, :id, :name, {}, { :multiple => false, class: "form-control"}) %>
    </div>

    <div class="form-group">
      <%= form.label :country_id %>
      <%= collection_select(:ad, :country_id, Country.all, :id, :name, {}, { :multiple => false, class: "form-control"}) %>
    </div>

    <div>
      <%= form.label :image %>
      <%= form.file_field :image%>
    </div>

    <%= form.submit "Create", :class => 'btn btn-link'%>
  </div>
<% end %>
